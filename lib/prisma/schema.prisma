// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id Int @id @default(autoincrement())
  title String
  account String 
  stocks Stock[]
  date DateTime @default(now())
}

model Stock{
  id Int @id @default(autoincrement())
  stock String 
  price String
  quantity Int
  date DateTime @default(now())
  memo String
  stockid Int
  category Category? @relation(fields: [stockid], references: [id])
}



